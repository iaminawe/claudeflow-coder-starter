# Coder Configuration
CODER_ACCESS_URL=http://localhost:7080
CODER_HTTP_ADDRESS=0.0.0.0:7080
CODER_WILDCARD_ACCESS_URL=*.localhost:7080
CODER_PORT=7080  # Change this to use a different port

# PostgreSQL Configuration (for Coder)
POSTGRES_USER=coder
POSTGRES_PASSWORD=coder
POSTGRES_DB=coder
DATABASE_URL=postgres://coder:coder@postgres:5432/coder?sslmode=disable

# Development Environment
NODE_ENV=development

# API Keys (Optional - Add as needed)
# CLAUDE_API_KEY=your-claude-api-key-here
# OPENAI_API_KEY=your-openai-api-key-here
# GITHUB_TOKEN=your-github-token-here

# Workspace Configuration
WORKSPACE_CPU_CORES=2
WORKSPACE_MEMORY_GB=4
WORKSPACE_DISK_GB=20

# Git Configuration (Optional - Used by init script)
# GIT_USER_NAME=Your Name
# GIT_USER_EMAIL=your.email@example.com
# GITHUB_USERNAME=your-github-username

# Development Ports
VITE_PORT=5173
NEXT_PORT=3000
API_PORT=8080

# Feature Flags
ENABLE_CLAUDE_AUTH_REMINDER=true
ENABLE_SPARC_AUTO_INIT=true

# Coder Template Variables
# These can be used in your Terraform templates
# TF_VAR_project_name=my-project
# TF_VAR_git_repo_url=https://github.com/username/repo